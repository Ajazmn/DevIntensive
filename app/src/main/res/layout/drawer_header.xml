<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:background="@drawable/paper_theme_material_design"
                android:paddingBottom="@dimen/spacing_small_8"
                android:paddingLeft="@dimen/spacing_normal_16"
                android:paddingRight="@dimen/spacing_normal_16"
                android:paddingTop="@dimen/spacing_medial_24">
    <!--android:background="@drawable/header_bg"-->


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:src="@drawable/av_120"
        /> <!--android:layout_marginLeft="@dimen/spacing_normal_16"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medium_56"

        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        > <!--android:background="@color/color_primary_dark"-->
        <!--android:paddingLeft="@dimen/spacing_normal_16"-->
        <TextView
            android:id="@+id/user_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/user_email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/my_email"
            android:textColor="@color/white"
            android:textSize="14sp"/>
    </LinearLayout>

</RelativeLayout>